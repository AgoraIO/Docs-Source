@startuml

!include agora_skin.iuml

actor "User" as USR

box "Your app"
participant "<size:40><&layers>\n Signaling SDK" as APP
end box

box "Agora"
participant "<size:40><&cloud>\n Signaling" as API
end box

group Initialize
USR -> APP: Open app
APP -> APP: Create a RTMClient instance: \n engineRef.current = createAgoraRtmClient
APP -> APP: Add event listeners
end

group Login
USR -> APP: Log in to Signaling: 
APP -> APP: Set the authentication token
APP -> API: engineRef.current.login
end

group Messages
USR -> APP: Publish message
APP -> API: engineRef.current.publish
USR -> APP: Subscribe to a channel
APP -> API: engineRef.current.subscribe
APP -> APP: Listen for message events
API -> APP: message: MessageEvent
APP -> USR: Receive message
end

group Close
USR -> APP: Log out
APP -> API: engineRef.current.logout
APP -> APP: Clean up: \n engineRef.current.release
end

@enduml